<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %level [%t]: %msg%n}{FATAL=bg_red, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}" disableAnsi="false"/>
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="org.polypheny" level="WARN">
            <AppenderRef ref="ConsoleAppender"/>
        </logger>
        <logger name="org.polypheny.jdbc.Driver" level="ERROR">
            <AppenderRef ref="ConsoleAppender"/>
        </logger>
        <Root level="warn"/>
    </Loggers>
</Configuration>